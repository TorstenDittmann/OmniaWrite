{
  "name": "omniawrite",
  "version": "1.3.0",
  "main": "./src/electron.js",
  "author": {
    "name": "OmniaWrite",
    "email": "info@omniawrite.com",
    "url": "https://omniawrite.com"
  },
  "description": "A text editor engineered for creative writing.",
  "homepage": "https://www.omniawrite.com/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/torstendittmann/omniawrite"
  },
  "dependencies": {
    "@capacitor/android": "^2.4.6",
    "@capacitor/cli": "^2.4.6",
    "@capacitor/core": "^2.4.6",
    "@sentry/browser": "^5.30.0",
    "node-fetch": "^2.6.1",
    "omnia-ebook-generator": "^0.2.1",
    "omnia-editor": "^0.1.0",
    "semver": "^7.3.4",
    "sortablejs": "^1.13.0",
    "sveltejs-tippy": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@storybook/addon-actions": "^6.1.18",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/svelte": "^6.1.18",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/svelte": "^3.0.3",
    "@testing-library/user-event": "^12.7.1",
    "@types/file-saver": "^2.0.1",
    "@types/jest": "^26.0.20",
    "appwrite": "^2.0.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^4.3.0",
    "date-fns": "^2.17.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.20.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "file-loader": "^6.2.0",
    "file-saver": "^2.0.5",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-transform-svelte": "^2.1.1",
    "license-checker": "^25.0.1",
    "mini-css-extract-plugin": "^0.11.3",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^1.4.2",
    "sass": "^1.32.7",
    "sass-loader": "^10.1.1",
    "style-loader": "^1.3.0",
    "svelte": "^3.32.3",
    "svelte-htm": "^1.1.1",
    "svelte-i18n": "^3.3.4",
    "svelte-jester": "^1.3.0",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.6.9",
    "svelte-spa-router": "^3.1.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2",
    "workbox-webpack-plugin": "^5.1.4",
    "workbox-window": "^5.1.4"
  },
  "scripts": {
    "build": "run-s prepare:* svelte-build",
    "build:cap": "run-s build cap:sync",
    "dev": "webpack-dev-server --content-base public",
    "electron": "run-s build pure-electron",
    "test": "jest",
    "svelte-build": "cross-env NODE_ENV=production webpack",
    "prepare:license": "license-checker --exclude \"MIT\" --json --customPath ./src/licenses.json > ./src/licenses.json",
    "pure-electron": "electron .",
    "cap:sync": "cap sync",
    "lint": "eslint src/",
    "prettier": "prettier --write --plugin-search-dir= ./src/**/*.{js,svelte,json,scss}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "build": {
    "appId": "com.omniawrite.app",
    "productName": "OmniaWrite",
    "compression": "normal",
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "torstendittmann",
      "repo": "omniawrite"
    },
    "linux": {
      "desktop": "OmniaWrite",
      "category": "Office",
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "win": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint prettier test"
    }
  }
}
