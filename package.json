{
    "name": "omniawrite",
    "version": "1.1.0",
    "main": "./src/electron.js",
    "author": {
        "name": "OmniaWrite",
        "email": "info@omniawrite.com",
        "url": "https://omniawrite.com"
    },
    "description": "A text editor engineered for creative writing.",
    "homepage": "https://www.omniawrite.com/",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/torstendittmann/omniawrite"
    },
    "dependencies": {
        "@capacitor/android": "^2.4.0",
        "@capacitor/cli": "^2.4.0",
        "@capacitor/core": "^2.4.0",
        "node-fetch": "^2.6.0",
        "omnia-ebook-generator": "^0.1.2",
        "omnia-editor": "0.0.8",
        "semver": "^7.3.2",
        "sortablejs": "^1.10.2",
        "sveltejs-tippy": "^3.0.0"
    },
    "devDependencies": {
        "@sentry/browser": "^5.20.1",
        "@types/file-saver": "^2.0.1",
        "appwrite": "^1.0.29",
        "cross-env": "^7.0.2",
        "css-loader": "^4.2.1",
        "electron": "^9.2.0",
        "electron-builder": "^22.8.0",
        "eslint": "^7.6.0",
        "eslint-plugin-svelte3": "^2.7.3",
        "file-loader": "^6.0.0",
        "file-saver": "^2.0.2",
        "license-checker": "^25.0.1",
        "mini-css-extract-plugin": "^0.10.0",
        "moment": "^2.27.0",
        "node-sass": "^4.14.1",
        "normalize.css": "^8.0.1",
        "npm-run-all": "^4.1.5",
        "sass-loader": "^9.0.3",
        "style-loader": "^1.1.3",
        "svelte": "^3.24.1",
        "svelte-i18n": "^3.0.4",
        "svelte-loader": "^2.13.6",
        "svelte-preprocess": "^4.0.10",
        "svelte-spa-router": "^2.2.0",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "workbox-webpack-plugin": "^5.1.3",
        "workbox-window": "^5.1.3"
    },
    "scripts": {
        "build": "run-s prepare:* svelte-build",
        "build:cap": "run-s build cap:copy",
        "dev": "webpack-dev-server --content-base public",
        "electron": "run-s build pure-electron",
        "svelte-build": "cross-env NODE_ENV=production webpack",
        "prepare:license": "license-checker --exclude \"MIT\" --json --customPath ./src/licenses.json > ./src/licenses.json",
        "prepare:changelog": "node ./build/scripts/changelog.js",
        "pure-electron": "electron .",
        "cap:copy": "cap copy",
        "lint": "eslint src/**/*.{js,svelte} --fix"
    },
    "build": {
        "appId": "com.omniawrite.app",
        "productName": "OmniaWrite",
        "compression": "normal",
        "asar": true,
        "publish": {
            "provider": "github",
            "owner": "torstendittmann",
            "repo": "omniawrite"
        },
        "linux": {
            "desktop": "OmniaWrite",
            "category": "Office",
            "target": [
                "AppImage",
                "snap",
                "deb",
                "rpm"
            ]
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg"
            ]
        },
        "win": {}
    }
}